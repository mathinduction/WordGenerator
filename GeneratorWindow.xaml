<Window x:Class="WordGenerator.GeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GeneratorWindow" Height="300" Width="300">
    <Grid Margin="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		
		<ListBox Grid.Column="0" Name="listBoxWords"/>
		<StackPanel Grid.Column="1" Margin="5" Orientation="Vertical">
			<TextBlock Margin="5">Число слогов:</TextBlock>
			<TextBox Name="textBoxN" Margin="5" />
			
			<Button Name="buttonNext" Margin="5,30,5,5" Click="buttonNext_Click">Next!</Button>
		</StackPanel>
	</Grid>
</Window>
